{% extends 'Front/base-layout-applab.html.twig' %}

{% form_theme form '@EasyAdmin/symfony-form-themes/bootstrap_5_layout.html.twig' %}

{% block javascripts %}
    <script type="text/javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    </script>
{% endblock %}


    {% block page_content %}


      <!-- ============================================-->
      <!-- <section> begin ============================-->
      <section class="py-6">

        <div class="container-lg">
          <div class="row align-items-center">
            <h1 class="fw-bold fs-4 display-3 lh-sm mt-4">Création de votre compte Mileo</h1>

            <div class="col-md-5 text-center text-md-start mt-4">
                
				<div class="auth-box">
                    
                    {{ form_start(form) }}
                    {{form_rest(form)}} 

                    <div class="form-group text-center">
                        <button type="submit" class="form-control btn btn-primary btn-lg btn-block">{{ "Sign-up"|trans }}</button>
                    </div>
                       
                    {{form_end(form)}}
				    	
				</div>

                <div class="or-container"><div class="line-separator"></div> <div class="or-label">{{ "or"|trans }}</div><div class="line-separator"></div></div>

                <div class="row">
                    <div class="text-center">
                        <a class="btn btn-lg btn-outline-primary btn-block text-uppercase form-control" href="{{ path('connect_google_start') }}"><img src="https://img.icons8.com/color/16/000000/google-logo.png">&nbsp;&nbsp;&nbsp;{{ "Sign-up with Google"|trans }}</a>
                    </div>
                </div>    
			
            </div>

			<div class="col-md-7 order-md-0 text-center text-md-start mt-0">

                <p class="my-4 pe-xl-5 text-center">
                    Lors de la création du compte, la formule gratuite vous sera attribuée automatiquement.
                    <br />Vous êtes bien-sûr libre de passer à la version Pro quand vous le souhaitez.
                </p>
                
                <div class="text-center">
				    <a class="btn btn-lg btn-outline-primary rounded-pill hover-top" href="{{ path('security_login') }}" role="button">{{ "I already have an account"|trans }}</a>
                </div>
                

				<div class="row align-items-center mt-4">
					<div class="col-lg-12 order-md-1 text-center text-md-start z-index-2 cta-image">
						<img class="img-fluid mb-4 mb-md-0" src="assets/img/illustrations/cta-original.png" width="850" alt="" />
					</div>
				</div>
            </div>

        </div>
        <!-- end of .container-->

      </section>
      <!-- <section> close ============================-->
      <!-- ============================================-->


{% endblock %}