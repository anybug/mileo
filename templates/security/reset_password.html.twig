{% extends 'Front/base-layout-applab.html.twig' %}

{% form_theme passForm '@EasyAdmin/symfony-form-themes/bootstrap_5_layout.html.twig' %}

{% set pageTitle = "Réinitialisation de mot de passe Mileo"|trans %}
{% block title %}{{ pageTitle }}{% endblock %}

{% block body_id %}body_reset_password{% endblock %}

{% block page_content %}
<section class="container my-3">
    <div class="row">
        <div class="col-6">
            <h1>Réinitialisation de mot de passe</h1>
            {{ form_start(passForm) }}
                {{ form_row(passForm.password) }}
                <button type="submit" class="btn btn-primary">Confirmer</button>
            {{ form_end(passForm) }}
        </div>
    </div>
</section>

{% endblock %}